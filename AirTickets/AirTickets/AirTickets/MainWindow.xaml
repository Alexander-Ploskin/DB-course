<mui:ModernWindow x:Class="AirTickets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:pages="clr-namespace:AirTickets.Pages"
        xmlns:local="clr-namespace:AirTickets"
        xmlns:vm="clr-namespace:AirTickets.ViewModel"
        mc:Ignorable="d"
        Title="AirTickets" IsTitleVisible="True"
        TextOptions.TextFormattingMode ="Ideal"
        UseLayoutRounding="False"
        ContentSource="/Pages/Schedule.xaml"
        MinWidth="640" MinHeight="480"
        Height="720" Width="1280">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Schedule">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Schedule" Source="/Pages/Schedule.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Edit flights base">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Add new flight" Source="/Pages/FlightsEditor.xaml"/>
                <mui:Link DisplayName="Tickets" Source="/Pages/Tickets.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
